{% extends 'base.html.twig' %}

{% block title %}Neoprint index{% endblock %}

{% block body %}
    <h1>Neoprint index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for neoprint in neoprints %}
            <tr>
                <td>{{ neoprint.id }}</td>
                <td>{{ neoprint.titre }}</td>
                <td>{{ neoprint.image }}</td>
                <td>
                    <a href="{{ path('neoprint_show', {'id': neoprint.id}) }}">show</a>
                    <a href="{{ path('neoprint_edit', {'id': neoprint.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('neoprint_new') }}">Create new</a>
{% endblock %}
